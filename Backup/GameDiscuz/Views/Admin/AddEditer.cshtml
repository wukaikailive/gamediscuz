@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <script src="~/Content/js/jquery-1.11.3.min.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    <title></title>
</head>
<body>
    <h2 align="center">添加小编</h2>

    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="email">邮箱</label>

                        <div class="col-lg-10">
                            <input type="text" id="email" name="email" class=" form-control">
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="password">密码</label>

                        <div class="col-lg-10">
                            <input type="text" id="password" name="password" class=" form-control">
                        </div>

                    </div>
                    <!--<div class="form-group">-->
                    <!--<label class="col-md-2 control-label" for="name">昵称</label>-->
                    <!--<div class="col-lg-10">-->
                    <!--<input type="text" id="name" name="" class=" form-control">-->
                    <!--</div>-->
                    <!--</div>-->
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="nickname">昵称</label>

                        <div class="col-lg-10">
                            <input type="text" id="nickname" name="nickname" class=" form-control">
                        </div>

                    </div>
                    <div class="form-group" id="SexRadio">
                        <label class="col-md-2 control-label" for="male">性别</label>
                        <div class="col-lg-10">
                            <input type="radio" name="sex" value="1" id="male" checked>
                            <label for="male" class="#">男</label>
                            <input type="radio" name="sex" value="0" id="female">
                            <label for="female" class="#">女</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="age">年龄</label>

                        <div class="col-lg-10">
                            <input type="number" id="age" name="age" class=" form-control">
                        </div>
                    </div>

                    <div class="col-md-8"></div>
                    <div class="col-md-4">

                        <button type="reset" class="btn btn-default">重置</button>
                        <button type="submit" class="btn btn-success">添加</button>

                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>

        </div>
    </div>
</body>
</html>

